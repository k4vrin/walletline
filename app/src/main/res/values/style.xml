<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="signEdiField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signFieldHeight</item>
        <item name="android:background">@drawable/outline_rounded</item>
        <item name="android:paddingLeft">@dimen/PaddingStartEndSignField</item>
        <item name="android:textSize">@dimen/signEdiFieldSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white90</item>
        <item name="android:layout_marginTop">@dimen/signMarginTop</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="signBtnSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signFieldHeight</item>
        <item name="android:textSize">@dimen/signSubmitBtnSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/outline_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/signMarginTop</item>

    </style>

    <color name="white90">#90ffffff</color>
</resources>